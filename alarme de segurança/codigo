    return random.choice([True, False])

def alarme_deve_ligar(movimento):
    erro = random.choice([True, False])
    if erro:
        return not movimento
    return movimento

def alarme():
    print("ðŸš¨ Alarme disparado! ðŸš¨")
    print("ðŸ”Š Tocando som do alarme...")
    time.sleep(2)
    print("Alarme desligado.\n")

print("Sistema de Alarme de SeguranÃ§a Iniciado.")
time.sleep(2)
print("Monitorando...\n")
time.sleep(1)

while True:
    movimento = sensor_movimento()
    print("Movimento detectado?", "Sim" if movimento else "NÃ£o")

    if alarme_deve_ligar(movimento):
        alarme()
    else:
        print("Sem alarme. Sistema em espera...\n")

    time.sleep(3)
